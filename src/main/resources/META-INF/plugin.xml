<idea-plugin>
    <id>com.github.javaica.springer</id>
    <name>Springer</name>
    <vendor email="maksim.golish2002@gmail.com">Javaica Team</vendor>

    <description><![CDATA[
    Spring plugin to generate boilerplate Spring code using Entity<br>
    <em></em>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    
    <idea-version since-build="193.0"/>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.javaica.springer.codegen.ComponentGenerator"/>
    </extensions>

    <actions>
        <action id="springer.codegen"
                class="com.github.javaica.springer.SpringerCodegenAction"
                text="Springer Codegen"
                description="Generate spring model-service-controller classes">
<!--            <add-to-group group-id="SpringGenerateGroup" anchor="first"/>-->
            <add-to-group group-id="GenerateGroup" anchor="first"/>
            <add-to-group group-id="CodeMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>